<Page
    x:Class="SynQPanel.Views.Pages.PluginsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:components="clr-namespace:SynQPanel.Views.Components"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SynQPanel"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:viewmodels="clr-namespace:SynQPanel.ViewModels"
    Title="PluginsPage"
    d:DataContext="{d:DesignInstance Type=viewmodels:PluginsViewModel}"
    d:DesignHeight="650"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Page.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisConverter" />
    </Page.Resources>

    <StackPanel MaxWidth="1360" Margin="20,20,20,20">
        <ui:CardControl>
            <ui:CardControl.Icon>
                <ui:SymbolIcon Symbol="PlugConnected20" />
            </ui:CardControl.Icon>
            <ui:CardControl.Header>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="auto" />
                        <ColumnDefinition Width="auto" />
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0">
                        <TextBlock
                                    FontSize="13"
                                    FontWeight="Medium"
                                    Text="Addons Framework" />

                        <TextBlock
                                    Margin="0,5,0,0"
                                    VerticalAlignment="Center"
                                    FontSize="12"
                                    Foreground="Orange">
                                    <Bold>Warning!</Bold>
                                    Add-ons run under the same privileges as SynQPanel (Administrator). Do not load untrusted add-ons. Always verify the source of the add-ons.<LineBreak />
                                    If unsure, do NOT install the plugin.</TextBlock>
                        <TextBlock
                                    Margin="0,5,0,0"
                                    VerticalAlignment="Center"
                                    FontSize="12"
                                    Foreground="{DynamicResource TextFillColorTertiaryBrush}"
                                    Text="Add-on development is available for advanced users. External add-on installation will be enabled in a future release." />
                    </StackPanel>
                    <ui:Anchor
                                Grid.Column="2"
                                Width="160"
                                VerticalAlignment="Center"
                                Appearance="Secondary"
                                Content="Open Add-ons Folder"
                                NavigateUri="{Binding PluginFolder}" />


                </Grid>
            </ui:CardControl.Header>
        </ui:CardControl>

        <ui:CardControl
                    Margin="0,10,0,0"
                    Background="#FF9800"
                    Visibility="{Binding ShowRestartBanner, Converter={StaticResource BooleanToVisibilityConverter}}">
            <ui:CardControl.Icon>
                <ui:SymbolIcon Symbol="Warning20" />
            </ui:CardControl.Icon>
            <ui:CardControl.Header>
                SynQPanel needs to be restarted to apply your changes.
            </ui:CardControl.Header>
        </ui:CardControl>

        <Label
                    Margin="0,40,0,0"
                    Content="Bundled Add-ons"
                    FontSize="14"
                    FontWeight="Medium"
                    Foreground="{DynamicResource TextFillColorPrimaryBrush}" />
        <ItemsControl ItemsSource="{Binding BundledPlugins}">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <components:PluginProperties PluginDisplayModel="{Binding}" />
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="auto" />
            </Grid.ColumnDefinitions>
            <Label
                        Margin="0,40,0,0"
                        Content="External Add-ons (Advanced)"
                        FontSize="14"
                        FontWeight="Medium"
                        Foreground="{DynamicResource TextFillColorPrimaryBrush}" />

            <ui:Anchor
                        Width="244"
                        Margin="1000,0,0,0"
                        VerticalAlignment="Bottom"
                        Appearance="Secondary"
                        Content="Import Add-ons (Coming Soon)"
                        IsEnabled="False"
                        ToolTip="External add-on installation will be enabled in a future release. For now, only bundled add-ons are supported." Grid.ColumnSpan="2" />


            <!--
                    <ui:Anchor
                        Grid.Column="1"
                        Width="150"
                        Margin="0,0,0,0"
                        VerticalAlignment="Bottom"
                        Appearance="Secondary"
                        Command="{Binding AddPluginFromZipCommand}"
                        Content="Import Add-ons" />
                    
              -->

        </Grid>

        <ItemsControl ItemsSource="{Binding ExternalPlugins}">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <components:PluginProperties PluginDisplayModel="{Binding}" />
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </StackPanel>
</Page>
