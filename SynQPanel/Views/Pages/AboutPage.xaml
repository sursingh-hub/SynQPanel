<Page
    x:Class="SynQPanel.Views.Pages.AboutPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:components="clr-namespace:SynQPanel.Views.Components"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SynQPanel"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:viewmodels="clr-namespace:SynQPanel.ViewModels"
    Title="AboutPage"
    d:DataContext="{d:DesignInstance Type=viewmodels:AboutViewModel}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <StackPanel MaxWidth="1360" Margin="20,20,20,20">
                <StackPanel Grid.Row="0" Margin="0,0,0,0">
                    <ui:CardControl>
                        <ui:CardControl.Icon>
                            <ui:SymbolIcon Symbol="Whiteboard24" />
                        </ui:CardControl.Icon>
                        <ui:CardControl.Header>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="auto" />
                                    <ColumnDefinition Width="auto" />
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0">
                                    <TextBlock
                                        FontSize="13"
                                        FontWeight="Medium"
                                        Text="{Binding ViewModel.Version, StringFormat='SynQPanel v{0}'}" />
                                    <TextBlock
                                        Margin="0,5,0,0"
                                        FontSize="12"
                                        Foreground="{DynamicResource TextFillColorTertiaryBrush}"
                                        Text="Licensed under the GNU General Public License v3.0 or later.  Copyright © 2025 SynQPanel contributors." />
                                </StackPanel>

                                <ui:Anchor
                                    Grid.Column="2"
                                    Width="150"
                                    Margin="0,0,0,0"
                                    VerticalAlignment="Center"
                                    Appearance="Secondary"
                                    Content="Github"
                                    NavigateUri="https://github.com/sursingh-hub/SynQPanel/" />

                            </Grid>
                        </ui:CardControl.Header>
                    </ui:CardControl>

                    <!--  Info Links  -->
                    <ItemsControl Margin="0,10,0,0" ItemsSource="{Binding ViewModel.InfoLinks}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <ui:CardControl Margin="0,0,0,10">
                                    <ui:CardControl.Icon>
                                        <ui:SymbolIcon Symbol="{Binding Icon}" />
                                    </ui:CardControl.Icon>
                                    <ui:CardControl.Header>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="auto" />
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="auto" />
                                            </Grid.ColumnDefinitions>

                                            <StackPanel Grid.Column="0" VerticalAlignment="Center">
                                                <TextBlock
                                                    FontSize="13"
                                                    FontWeight="Medium"
                                                    Text="{Binding Title}" />
                                                <TextBlock
                                                    Margin="0,5,0,0"
                                                    FontSize="12"
                                                    Foreground="{DynamicResource TextFillColorTertiaryBrush}"
                                                    Text="{Binding Description}" />
                                            </StackPanel>
                                            <ui:Anchor
                                                Grid.Column="2"
                                                Width="150"
                                                Margin="0,0,0,0"
                                                VerticalAlignment="Center"
                                                Appearance="Secondary"
                                                Content="{Binding ButtonText}"
                                                NavigateUri="{Binding NavigateUri}" />
                                        </Grid>
                                    </ui:CardControl.Header>
                                </ui:CardControl>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                     <!--  Requirements & Notices  -->
                    <ui:CardControl Margin="0,0,0,10">
                        <ui:CardControl.Icon>
                            <ui:SymbolIcon Symbol="Info24" />
                        </ui:CardControl.Icon>

                <ui:CardControl.Header>
                    <StackPanel>

                        <!-- Title -->
                        <TextBlock
                        FontSize="13"
                        FontWeight="Medium"
                        Text="Requirements &amp; Notices" />

                        <!-- Requirement -->
                        <TextBlock
                        Margin="0,6,0,0"
                        FontSize="12"
                        Foreground="{DynamicResource TextFillColorTertiaryBrush}"
                        TextWrapping="Wrap"
                        Text="SynQPanel requires a compatible AIDA64 installation to access hardware telemetry." />

                        <!-- Trademark notice -->
                        <TextBlock
                        Margin="0,4,0,0"
                        FontSize="12"
                        Foreground="{DynamicResource TextFillColorTertiaryBrush}"
                        TextWrapping="Wrap"
                        Text="AIDA64 is a registered trademark of FinalWire Ltd. SynQPanel is an independent project and is not affiliated with or endorsed by FinalWire Ltd." />

                        <!-- Origin / GPL notice -->
                        <TextBlock
                        Margin="0,4,0,0"
                        FontSize="12"
                        Foreground="{DynamicResource TextFillColorTertiaryBrush}"
                        TextWrapping="Wrap"
                        Text="SynQPanel is based on an open-source project released under the GNU General Public License (GPL v3 or later). It has since been independently developed, extended, and maintained by the SynQPanel contributors." />

                    </StackPanel>
                </ui:CardControl.Header>

            </ui:CardControl>









            <!--  Contributors  -->
                    <ui:CardExpander
                        Margin="0,0,0,10"
                        HorizontalContentAlignment="Left"
                        >
                        <ui:CardExpander.Icon>
                            <ui:SymbolIcon Symbol="People20" />
                        </ui:CardExpander.Icon>
                        <ui:CardExpander.Header>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0" VerticalAlignment="Center">
                                    <TextBlock
                                        FontSize="13"
                                        FontWeight="Medium"
                                        Text="People" />
                                    <TextBlock
                                        Margin="0,5,0,0"
                                        FontSize="12"
                                        Foreground="{DynamicResource TextFillColorTertiaryBrush}"
                                        Text="Fellow humans who helped and continue to make SynQPanel great." />
                                </StackPanel>
                            </Grid>
                        </ui:CardExpander.Header>

                        <StackPanel>
                            <ItemsControl ItemsSource="{Binding ViewModel.Contributors}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Margin="0,0,0,20">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="Auto" />
                                            </Grid.ColumnDefinitions>
                                            <StackPanel Grid.Column="0" VerticalAlignment="Center">
                                                <TextBlock
                                                    FontSize="13"
                                                    FontWeight="Medium"
                                                    Text="{Binding Name}" />
                                                <TextBlock
                                                    Margin="0,0,0,0"
                                                    FontSize="12"
                                                    Foreground="{DynamicResource TextFillColorTertiaryBrush}"
                                                    Text="{Binding Description}" />


                                        <ui:HyperlinkButton
                                            FontSize="12"
                                            Content="{Binding Url}"
                                            NavigateUri="{Binding Url}">

                                            <ui:HyperlinkButton.Style>
                                                <Style
                                                TargetType="ui:HyperlinkButton"
                                                BasedOn="{StaticResource {x:Type ui:HyperlinkButton}}">

                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Url}" Value="">
                                                            <Setter Property="Visibility" Value="Collapsed" />
                                                        </DataTrigger>

                                                        <DataTrigger Binding="{Binding Url}" Value="{x:Null}">
                                                            <Setter Property="Visibility" Value="Collapsed" />
                                                        </DataTrigger>
                                                    </Style.Triggers>

                                                </Style>
                                            </ui:HyperlinkButton.Style>

                                            <ui:HyperlinkButton.Icon>
                                                <ui:SymbolIcon Symbol="Link20" />
                                            </ui:HyperlinkButton.Icon>

                                        </ui:HyperlinkButton>




                                    </StackPanel>
                                        </Grid>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </ui:CardExpander>

                    <!--  Other Licenses  -->
                    <ui:CardExpander
                        Margin="0,0,0,10"
                        HorizontalContentAlignment="Left"
                        >
                        <ui:CardExpander.Icon>
                            <ui:SymbolIcon Symbol="Code20" />
                        </ui:CardExpander.Icon>
                        <ui:CardExpander.Header>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0" VerticalAlignment="Center">
                                    <TextBlock
                                        FontSize="13"
                                        FontWeight="Medium"
                                        Text="Licenses" />
                                    <TextBlock
                                        Margin="0,5,0,0"
                                        FontSize="12"
                                        Foreground="{DynamicResource TextFillColorTertiaryBrush}"
                                        Text="Software and licenses used." />
                                </StackPanel>
                            </Grid>
                        </ui:CardExpander.Header>

                        <StackPanel HorizontalAlignment="Stretch">
                            <ItemsControl ItemsSource="{Binding ViewModel.ThirdPartyLicenses}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Margin="0,0,0,20" HorizontalAlignment="Stretch">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="Auto" />
                                            </Grid.ColumnDefinitions>
                                            <StackPanel Grid.Column="0" VerticalAlignment="Center">
                                                <TextBlock
                                                    FontSize="13"
                                                    FontWeight="Medium"
                                                    Text="{Binding Name}" />
                                                <TextBlock
                                                    Margin="0,0,0,0"
                                                    FontSize="12"
                                                    Foreground="{DynamicResource TextFillColorTertiaryBrush}"
                                                    Text="{Binding License}" />
                                                <ui:HyperlinkButton
                                                    Content="{Binding ProjectUrl}"
                                                    FontSize="12"
                                                    NavigateUri="{Binding ProjectUrl}">
                                                    <ui:HyperlinkButton.Icon>
                                                        <ui:SymbolIcon Symbol="Link20" />
                                                    </ui:HyperlinkButton.Icon>
                                                </ui:HyperlinkButton>
                                            </StackPanel>
                                        </Grid>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </ui:CardExpander>

                </StackPanel>
            </StackPanel>
</Page>