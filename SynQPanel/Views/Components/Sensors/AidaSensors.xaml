<UserControl
    x:Class="SynQPanel.Views.Components.AidaSensors"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:components="clr-namespace:SynQPanel.Views.Components"
    xmlns:converters="clr-namespace:SynQPanel.Views.Converters"
    Foreground="{DynamicResource TextFillColorSecondaryBrush}">

    <UserControl.Resources>
        <converters:NullOrEmptyToVisibilityConverter x:Key="NullOrEmptyToVisibilityConverter"/>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Error panel -->
            <RowDefinition Height="Auto"/>
            <!-- Header + toggle -->
            <RowDefinition Height="*"/>
            <!-- Sensors list -->
            <RowDefinition Height="Auto"/>
            <!-- Details/ControlBar -->
        </Grid.RowDefinitions>

        <!-- ERROR MESSAGE PANEL -->
        <Border Grid.Row="0" Margin="12" Padding="16" Background="#AA222222" CornerRadius="8"
                Visibility="{Binding ErrorMessage, Converter={StaticResource NullOrEmptyToVisibilityConverter}}">
            <TextBlock Text="{Binding ErrorMessage}"
                       Foreground="White"
                       FontWeight="Bold"
                       FontSize="15"
                       TextAlignment="Center"
                       TextWrapping="Wrap" />
        </Border>

        <!-- HEADER + TOGGLE -->
        <Grid Grid.Row="1" Margin="8,8,8,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0"
                Text="Sensors"
                FontWeight="Bold"
                FontSize="16"
                VerticalAlignment="Center"/>
            <StackPanel Grid.Column="1"
                Orientation="Horizontal"
                VerticalAlignment="Center">
                <TextBlock Text="Grouped" Margin="0,0,6,0" VerticalAlignment="Center"/>
                <ui:ToggleSwitch Margin="0,0,0,0"
                    IsChecked="{Binding UseGroupedView, Mode=TwoWay}" />
            </StackPanel>
        </Grid>

        <Grid Grid.Row="2">

            <!-- Shared Border for BOTH DataGrid and TreeView -->
            <Border CornerRadius="4"
            BorderThickness="0.8"
            BorderBrush="Cyan"
            Background="#22272e"
            Margin="8,6,8,10"
            SnapsToDevicePixels="True">

                <!-- Put both in a Grid (one visible at a time) -->
                <Grid>

                    <!-- FLAT VIEW -->
                    <DataGrid x:Name="FlatGrid"
                      ItemsSource="{Binding FlatSensors}"
                      SelectedItem="{Binding SelectedItem, Mode=TwoWay}"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      CanUserAddRows="False"
                      CanUserDeleteRows="False"
                      CanUserResizeRows="False"
                      HeadersVisibility="Column"
                      RowHeaderWidth="0"
                      Margin="0.5,0.5,0.5,0.5"
                      SelectionMode="Single"
                      EnableRowVirtualization="True"
                      EnableColumnVirtualization="True"
                      VirtualizingPanel.IsVirtualizing="True"
                      VirtualizingPanel.VirtualizationMode="Recycling"
                      ScrollViewer.CanContentScroll="True"
                      BorderThickness="0"
                      Background="Transparent">

                        <!-- Hide when grouped view is ON -->
                        <DataGrid.Style>
                            <Style TargetType="DataGrid">
                                <Setter Property="Visibility" Value="Visible" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding UseGroupedView}" Value="True">
                                        <Setter Property="Visibility" Value="Collapsed" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </DataGrid.Style>

                        <!-- column resources here... -->
                        <DataGrid.Resources>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="Background" Value="#22272e"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="FontWeight" Value="Medium"/>
                                <Setter Property="FontSize" Value="13"/>
                                <Setter Property="Padding" Value="8,5"/>
                                <Setter Property="BorderBrush" Value="Cyan"/>
                            </Style>
                        </DataGrid.Resources>

                        <!-- your columns unchanged -->
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Type" Width="80" Binding="{Binding Type}" FontWeight="Light"/>
                            <DataGridTextColumn Header="ID" Width="150" Binding="{Binding Id}" FontWeight="SemiBold"/>
                            <DataGridTextColumn Header="Label" Width="*" Binding="{Binding Name}" FontWeight="Light"/>
                            <DataGridTemplateColumn Header="" Width="34">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Image Width="18" Height="18" Margin="3,0,4,0"
                                       Source="{Binding Icon, FallbackValue=/Resources/Images/AIDA/empty.png}" />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <DataGridTemplateColumn Header="Value" Width="140">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock TextAlignment="Right" Padding="0,0,20,0" FontWeight="Light">
                                            <TextBlock.Text>
                                                <MultiBinding StringFormat="{}{0} {1}">
                                                    <Binding Path="Value" />
                                                    <Binding Path="Unit" />
                                                </MultiBinding>
                                            </TextBlock.Text>
                                        </TextBlock>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>

                    </DataGrid>


                    <!-- GROUPED VIEW -->
                    <TreeView x:Name="GroupedTree"
                      ItemsSource="{Binding GroupedSensors}"
                      SelectedItemChanged="TreeViewInfo_SelectedItemChanged"
                      VirtualizingPanel.IsVirtualizing="False">

                        <!-- Show only when grouped view is ON -->
                        <TreeView.Style>
                            <Style TargetType="TreeView">
                                <Setter Property="Visibility" Value="Collapsed" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding UseGroupedView}" Value="True">
                                        <Setter Property="Visibility" Value="Visible" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TreeView.Style>

                        <!--
                        <TreeView.ItemContainerStyle>
                            <Style TargetType="TreeViewItem">
                                <Setter Property="IsExpanded" Value="{Binding IsExpanded, Mode=TwoWay}" />
                                <Setter Property="IsSelected" Value="{Binding IsSelected, Mode=TwoWay}" />
                            </Style>
                        </TreeView.ItemContainerStyle>
                        -->

                        
                        
                        
                        <TreeView.ItemTemplate>
                            <HierarchicalDataTemplate ItemsSource="{Binding Children}">

                                <Border
            Margin="2,3,2,2"
            Padding="4,1"
            CornerRadius="4">

                                    <!-- Selection highlight (safe: data-level, not TreeViewItem) -->
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Setter Property="Background" Value="#1AFFFFFF" />
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsSelected}" Value="True">
                                                    <Setter Property="Background" Value="#263A8DFF" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>

                                    <StackPanel>

                                        <!-- Header row -->
                                        <Grid SnapsToDevicePixels="True">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="30" />
                                                <ColumnDefinition Width="320" />
                                                <ColumnDefinition Width="150" />
                                            </Grid.ColumnDefinitions>

                                            <Image
                        Grid.Column="0"
                        Width="15"
                        Height="15"
                        Margin="1,0,2,0"
                        Source="{Binding Icon, FallbackValue=/Resources/Images/AIDA/empty.png}" />

                                            <TextBlock
                                                Grid.Column="1"
                                                Text="{Binding Name}"
                                                FontWeight="SemiBold"
                                                VerticalAlignment="Center"
                                                Foreground="{DynamicResource TextFillColorPrimaryBrush}" />
                                            <TextBlock
                                            Grid.Column="2"
                                            TextAlignment="Right"
                                            Padding="0,0,20,0"
                                            FontWeight="Light"
                                            VerticalAlignment="Center"
                                            Foreground="{DynamicResource TextFillColorPrimaryBrush}">
                                                <TextBlock.Text>
                                                    <MultiBinding StringFormat="{}{0} {1}">
                                                        <Binding Path="Value" />
                                                        <Binding Path="Unit" />
                                                    </MultiBinding>
                                                </TextBlock.Text>
                                            </TextBlock>
                                        </Grid>

                                        <!-- Divider line (only visual) -->
                                        <Border
                    Height="1"
                    Margin="0,3,0,0"
                    Background="#22FFFFFF" />

                                    </StackPanel>
                                </Border>

                            </HierarchicalDataTemplate>
                        </TreeView.ItemTemplate>

                        
                        
                        
                        

                    </TreeView>

                </Grid>
            </Border>
        </Grid>


        <!-- DETAILS/CONTROL BAR -->
        <StackPanel Grid.Row="3" Margin="10,0,10,0">
            <Separator Margin="0,5,0,5" />
            <Expander Margin="0,0,0,0"
                IsExpanded="False">
                <Expander.Header>
                    <Grid Margin="0,0,20,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto" />
                            <ColumnDefinition Width="1*" />
                        </Grid.ColumnDefinitions>
                        <Label HorizontalAlignment="Left">
                            <TextBlock FontWeight="Medium" Text="{Binding Path=SelectedItem.Name, FallbackValue='No sensor selected.'}" />
                        </Label>
                        <Label Grid.Column="1" HorizontalAlignment="Right">
                            <TextBlock FontWeight="Medium">
                                <TextBlock.Text>
                                    <MultiBinding StringFormat="{}{0}{1}">
                                        <Binding Path="SelectedItem.Value" />
                                        <Binding Path="SelectedItem.Unit" />
                                    </MultiBinding>
                                </TextBlock.Text>
                            </TextBlock>
                        </Label>
                    </Grid>
                </Expander.Header>
                <StackPanel Margin="0,-5,0,0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*" />
                            <ColumnDefinition Width="0.5*" />
                            <ColumnDefinition Width="1*" />
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0" Margin="0,0,10,0">
                            <TextBox
                                Margin="0,8,0,0"
                                IsEnabled="True"
                                IsReadOnly="True"
                                Foreground="Cyan"
                                Text="{Binding Path=SelectedItem.Id}"  />
                            <TextBlock
                                Margin="5,0,0,0"
                                FontSize="12"
                                Foreground="{DynamicResource TextFillColorDisabledBrush}"
                                Text="ID" />
                        </StackPanel>
                        <StackPanel Grid.Column="1">
                            <TextBox
                                Margin="0,8,0,0"
                                IsEnabled="True"
                                IsReadOnly="True"
                                 Text="{Binding Path=SelectedItem.Type, Mode=OneWay}"  />
                            <TextBlock
                                Margin="5,0,0,0"
                                FontSize="12"
                                Foreground="{DynamicResource TextFillColorDisabledBrush}"
                                Text="Type" />
                        </StackPanel>
                        <StackPanel Grid.Column="2" Margin="10,0,0,0">
                            <TextBox
                                Margin="0,8,0,0"
                                IsEnabled="True"
                                IsReadOnly="True"
                                Text="{Binding Path=SelectedItem.Name}"  />
                            <TextBlock
                                Margin="5,0,0,0"
                                FontSize="12"
                                Foreground="{DynamicResource TextFillColorDisabledBrush}"
                                Text="Name" />
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Expander>
            <Separator Margin="0,5,0,0" />
            <components:SensorActions
                SelectedSensorItem="{Binding SelectedItem}"
                SensorType="Plugin" />
        </StackPanel>
    </Grid>
</UserControl>
