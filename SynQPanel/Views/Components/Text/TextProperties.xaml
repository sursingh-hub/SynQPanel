<UserControl
    x:Class="SynQPanel.Views.Components.TextProperties"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:app="clr-namespace:SynQPanel"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SynQPanel.Views.Components"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:metro="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:models="clr-namespace:SynQPanel.Models"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    d:DataContext="{d:DesignInstance Type=models:TextDisplayItem}"
    mc:Ignorable="d">

    <Grid Margin="10,10,10,0">
        <StackPanel Grid.Column="1">
            <StackPanel>
                <TextBox x:Name="TextBoxName" Text="{Binding Name}" />
                <TextBlock
                    Margin="5,0,0,0"
                    FontSize="12"
                    Foreground="{DynamicResource TextFillColorDisabledBrush}"
                    Text="Text" />
            </StackPanel>

            <StackPanel
                Grid.Row="2"
                Margin="0,-2,0,0"
                HorizontalAlignment="Right"
                Orientation="Horizontal">
                <ToggleButton Margin="5,0,0,0" IsChecked="{Binding Underline}">
                    <ui:SymbolIcon Symbol="TextUnderline20" ToolTip="Underline" />
                </ToggleButton>
                <ToggleButton Margin="5,0,0,0" IsChecked="{Binding Strikeout}">
                    <ui:SymbolIcon Symbol="TextStrikethrough20" ToolTip="Strikethrough" />
                </ToggleButton>
                <ToggleButton Margin="5,0,0,0" IsChecked="{Binding RightAlign}">
                    <ui:SymbolIcon Symbol="AlignRight20" ToolTip="Right align" />
                </ToggleButton>
                <ToggleButton Margin="5,0,0,0" IsChecked="{Binding Uppercase}">
                    <ui:SymbolIcon Symbol="TextCaseUppercase20" ToolTip="Uppercase" />
                </ToggleButton>
                <ToggleButton Margin="5,0,0,0" IsChecked="{Binding Wrap}">
                    <ui:SymbolIcon Symbol="TextWrap20" ToolTip="Wrap Text (fixed width required)" />
                </ToggleButton>
                <ToggleButton Margin="5,0,0,0" IsChecked="{Binding Ellipsis}">
                    <ui:SymbolIcon Symbol="TextWholeWord20" ToolTip="Ellipsis (fixed width required)" />
                </ToggleButton>
                <ToggleButton Margin="5,0,0,0" IsChecked="{Binding CenterAlign}">
                    <ui:SymbolIcon Symbol="AlignCenterHorizontal20" ToolTip="Center align (fixed width required)" />
                </ToggleButton>
                <ToggleButton Margin="5,0,0,0" IsChecked="{Binding Marquee}">
                    <ui:SymbolIcon Symbol="TextContinuous20" ToolTip="Marquee (fixed width required)" />
                </ToggleButton>
            </StackPanel>

            <Grid Margin="0,12,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Margin="0,0,0,0">
                    <ui:NumberBox
                        Margin="0,0,0,0"
                        FontSize="14"
                        MaxDecimalPlaces="0"
                        Minimum="0"
                        SmallChange="1"
                        Text="{Binding Width}"
                        Value="{Binding Width}" />
                    <TextBlock
                        FontSize="12"
                        Foreground="{DynamicResource TextFillColorDisabledBrush}"
                        Text="Fixed Width" />
                </StackPanel>

                <StackPanel Grid.Column="1" Margin="10,0,0,0">
                    <ui:NumberBox
                        Margin="0,0,0,0"
                        FontSize="14"
                        MaxDecimalPlaces="0"
                        Minimum="0"
                        SmallChange="1"
                        Text="{Binding MarqueeSpacing}"
                        Value="{Binding MarqueeSpacing}" />
                    <TextBlock
                        FontSize="12"
                        Foreground="{DynamicResource TextFillColorDisabledBrush}"
                        Text="Marquee spacing" />
                </StackPanel>

                <StackPanel
                    Grid.Column="2"
                    Margin="10,0,0,0"
                    VerticalAlignment="Bottom"
                    IsEnabled="{Binding Marquee}">
                    <Slider
                        Margin="0,0,0,0"
                        Maximum="1000"
                        Minimum="1"
                        Value="{Binding MarqueeSpeed}" />

                    <Grid Margin="5,0,5,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="auto" />
                        </Grid.ColumnDefinitions>
                        <TextBlock
                            Grid.Column="0"
                            Margin="0,0,0,0"
                            FontSize="12"
                            Foreground="{DynamicResource TextFillColorDisabledBrush}"
                            Text="Marquee speed" />
                        <TextBlock
                            Grid.Column="1"
                            Margin="0,0,0,0"
                            FontSize="12"
                            Foreground="{DynamicResource TextFillColorDisabledBrush}"
                            Text="{Binding MarqueeSpeed, Mode=OneWay}" />
                    </Grid>
                </StackPanel>
            </Grid>

            <Grid Margin="0,10,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <StackPanel Margin="0,0,0,0">
                    <metro:ColorPicker
                        Height="35"
                        metro:TextBoxHelper.UseFloatingWatermark="False"
                        Background="Transparent"
                        BorderThickness="1"
                        SelectedColor="{Binding Color}" />
                    <TextBlock
                        Margin="5,0,0,0"
                        FontSize="12"
                        Foreground="{DynamicResource TextFillColorDisabledBrush}"
                        Text="Font Color" />
                </StackPanel>
                <StackPanel Grid.Column="1" Margin="10,0,0,0">
                    <ui:NumberBox
                        Margin="0,0,0,0"
                        FontSize="14"
                        MaxDecimalPlaces="0"
                        SmallChange="1"
                        Text="{Binding FontSize}"
                        TextChanged="NumberBox_TextChanged"
                        Value="{Binding FontSize}" />
                    <TextBlock
                        Margin="5,0,0,0"
                        FontSize="12"
                        Foreground="{DynamicResource TextFillColorDisabledBrush}"
                        Text="Font Size" />
                </StackPanel>
            </Grid>

            <Grid Margin="0,10,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <StackPanel Margin="0,0,5,0">
                    <ComboBox
                        Grid.Column="1"
                        ItemsSource="{Binding InstalledFonts, RelativeSource={RelativeSource AncestorType=local:TextProperties}}"
                        ScrollViewer.VerticalScrollBarVisibility="Visible"
                        SelectedValue="{Binding TextDisplayItem.Font, RelativeSource={RelativeSource AncestorType=local:TextProperties}}">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock FontFamily="{Binding Converter={StaticResource FontFamilyConverter}}" Text="{Binding}" />
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                    <TextBlock
                        Margin="5,0,0,0"
                        FontSize="12"
                        Foreground="{DynamicResource TextFillColorDisabledBrush}"
                        Text="Font Family" />
                </StackPanel>
                <StackPanel Grid.Column="1" Margin="5,0,0,0">
                    <ComboBox
                        Grid.Column="1"
                        ItemsSource="{Binding FontStyles, RelativeSource={RelativeSource AncestorType=local:TextProperties}}"
                        ScrollViewer.VerticalScrollBarVisibility="Visible"
                        SelectedValue="{Binding TextDisplayItem.FontStyle, RelativeSource={RelativeSource AncestorType=local:TextProperties}}">
                        <!--<ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock FontFamily="{Binding Converter={StaticResource FontFamilyConverter}}" Text="{Binding}" />
                            </DataTemplate>
                        </ComboBox.ItemTemplate>-->
                    </ComboBox>
                    <TextBlock
                        Margin="5,0,0,0"
                        FontSize="12"
                        Foreground="{DynamicResource TextFillColorDisabledBrush}"
                        Text="Font Style" />
                </StackPanel>
            </Grid>



        </StackPanel>


    </Grid>
</UserControl>
